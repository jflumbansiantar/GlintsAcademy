<%- include('partials/header.ejs') %>

  <div class="container">
      <div class="row">
          <div class="col-6 mx-auto">
              <h3>Edit Movie</h3>
              <form action='/movies/edit/<%= movie.id %>' method="POST">
                <div class="form-group">
                  <label for="title">Title</label>
                  <input type="text" class="form-control" id="title" name="title" value="<%= movie.name %>">
                  <small class="form-text text-muted">Don't input the same title</small>
                </div>
                <div class="form-group">
                    <label for="info">Info</label>
                    <textarea class="form-control" id="info" name="info" rows="3"></textarea>
                </div>
                <div class="form-group">
                  <label for="year">Year</label>
                  <input type="number" class="form-control" id="year" name="year" name="year">
                  <small class="form-text text-muted">Note : Number only</small>
                </div>
                <div class="form-group">
                  <label for="rating">Rating</label>
                  <input type="number" class="form-control" id="rating" name="rating" name="rating">
                  <small class="form-text text-muted">Note : Number only</small>
                </div>
                
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
          </div>
      </div>
</div>

  
<%- include('partials/footer.ejs') %>
   
